@page
@model IndexModel
@{
    ViewData["Title"] = "About page";
}

<div class="container mt-5">
    <h2>Kaydol</h2>
    <form method="post" class="mt-3">
        <div class="mb-3">
            <label for="name" class="form-label">Ad Soyad</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Adınızı ve soyadınızı girin" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-posta</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi oluşturun" required>
        </div>
        <button type="submit" class="btn btn-primary">Kaydol</button>
        <p class="mt-3">
            Zaten bir hesabınız var mı? <a href="/home/login">Oturum Aç</a>
        </p>
    </form>
</div>