@page
@model Web_Project.Pages.Reservation.ReservationModel
@{
    ViewData["Title"] = "Rezervasyon Formu";
}

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/reservation.css" />

<div class="reservation-container">
    <h2>Rezervasyon Formu</h2>
    <form method="post">
        <div class="form-group">
            <label for="fullName">Ad Soyad</label>
            <input type="text" id="fullName" name="ReservationData.FullName" value="@Model.ReservationData.FullName" required />
        </div>
        <div class="form-group">
            <label for="email">E-posta</label>
            <input type="email" id="email" name="ReservationData.Email" value="@Model.ReservationData.Email" required />
        </div>
        <div class="form-group">
            <label for="phone">Telefon</label>
            <input type="tel" id="phone" name="ReservationData.Phone" value="@Model.ReservationData.Phone" required />
        </div>
        <div class="form-group">
            <label for="guests">Misafir Sayısı</label>
            <select id="guests" name="ReservationData.Guests" onchange="updateGuestFields()" value="@Model.ReservationData.Guests">
                <option value="1">1 misafir</option>
                <option value="2">2 misafir</option>
                <option value="3">3 misafir</option>
                <option value="4">4 misafir</option>
            </select>
        </div>

        <div id="guest-birthdates">
            @for (int i = 0; i < Model.ReservationData.Guests; i++)
            {
                <div class="form-group">
                    <label for="birthdate-@(i + 1)">@($"{i + 1}. Kişinin Doğum Tarihi")</label>
                    <input type="date" id="birthdate-@(i + 1)" name="ReservationData.BirthDates[@i]" required />
                </div>
            }
        </div>

        <div class="form-group">
            <label for="address">Adres</label>
            <textarea id="address" name="ReservationData.Address" rows="3" required>@Model.ReservationData.Address</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>
